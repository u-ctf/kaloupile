# HTTPRoute for Kratos UI auth paths
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: kratos-ui-route
  namespace: app
spec:
  parentRefs:
    - name: main-gateway
      namespace: gateway
  hostnames:
    - "{{.Domain}}"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /auth
      backendRefs:
        - name: kratos-ui
          port: 3000
---
# HTTPRoute for Kratos API (public endpoints)
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: kratos-route
  namespace: external
spec:
  parentRefs:
    - name: main-gateway
      namespace: gateway
  hostnames:
    - "kratos.{{.Domain}}"
  rules:
    # All Kratos public API endpoints
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: kratos-public
          port: 4433
---
# HTTPRoute for mailslurper
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: mailslurper-route
  namespace: external
spec:
  parentRefs:
    - name: main-gateway
      namespace: gateway
  hostnames:
    - "mailslurper.{{.Domain}}"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /api
      filters:
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplacePrefixMatch
              replacePrefixMatch: /
      backendRefs:
        - name: mailslurper
          port: 4437
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: mailslurper
          port: 4436
