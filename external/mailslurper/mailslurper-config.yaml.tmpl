# Mailslurper config map
apiVersion: v1
kind: ConfigMap
metadata:
  name: mailslurper-config
  namespace: external
data:
  config.json: |
    {
      "wwwAddress": "0.0.0.0",
      "wwwPort": 4436,
      "wwwPublicURL": "{{.Scheme}}://mailslurper.{{.Domain}}",
      "serviceAddress": "0.0.0.0",
      "servicePort": 4437,
      "servicePublicURL": "{{.Scheme}}://mailslurper.{{.Domain}}/api",
      "smtpAddress": "0.0.0.0",
      "smtpPort": 1025,
      "dbEngine": "SQLite",
      "dbHost": "",
      "dbPort": 0,
      "dbDatabase": "mailslurper.db",
      "dbUserName": "",
      "dbPassword": "",
      "maxWorkers": 1000,
      "autoStartBrowser": false,
      "keyFile": "",
      "certFile": "",
      "adminKeyFile": "",
      "adminCertFile": ""
    }
